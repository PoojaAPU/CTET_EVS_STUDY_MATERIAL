\begin{frame}{EVS:  Environmental Studies}

\begin{enumerate}
\item Multidisciplinary subject
\item Inculcates concern for environment in children
\item Develops right attitudes towards the environment and sustainability.
\end {enumerate}
\end{frame}


\begin{frame}{Multidisciplinary subject}
